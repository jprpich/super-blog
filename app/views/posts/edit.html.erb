<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @errors %>
      <div class="alert alert-danger" role="alert">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </div>
    <% end %>
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "title" %>
      </div>

      <div class="form-group">
        <%= f.text_area :body, rows: "15", class: "form-control input-lg", placeholder: "body" %>
      </div>

      <%= f.submit "Edit Post!", class: "btn-primary btn-block btn-lg" %>

    <% end %>
    <br>
    <%= link_to 'Back', @post %>
  </div>
</div>





